XF86Audio{Prev,Next,Play}
	playerctl {previous,next,play-pause}

XF86Audio{Raise,Lower}Volume
	amixer -q set Master 1%{+,-}

XF86AudioMute
	amixer -q set Master toggle

super+shift+q
	i3lock --color=2f343f

super+e
	rofi -show run -lines 5 -eh 2 -fullscreen -padding 300 -opacity "85" -bw 0 -bc "$back" -bg "$back" -fg "$text" -hlbg "$back" -hlfg "$alt" -font "System San Francisco Display 12"

super+Return
	urxvt

super+shift+e
	undock-monitors.sh
super+shift+control+e
	check-monitors.sh
